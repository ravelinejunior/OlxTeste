<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/capa_YoutubeApi_id_Adapter"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="2dp"
        android:background="@color/cinzaMedio"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_location_city_black_24dp"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/titulo_YoutubeApi_id_Adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo"
        android:textColor="@android:color/black"
        android:padding="5dp"
        android:textSize="20sp"

        />
    <TextView
        android:id="@+id/descricao_YoutubeApi_id_Adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/descricao"
        android:padding="5dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"

        />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        />

</LinearLayout>